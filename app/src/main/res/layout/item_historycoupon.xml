<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    android:id="@+id/root"
    >
    <LinearLayout
        android:layout_marginTop="20px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left">
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/material_blue_grey_90"
                android:text="沙画爽爽爽傻沙画爽爽爽傻沙画爽爽爽傻"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="35px"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="15px"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/material_blue_grey_90"
                    android:text="浏览量："
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textSize="25px"/>
                <TextView
                    android:id="@+id/tv_browseNum"
                    android:textColor="@color/material_blue_grey_90"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textSize="25px"/>
            </LinearLayout>
            <View style="@style/vertical_cutting_line" />
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/material_blue_grey_90"
                    android:text="点赞量："
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textSize="25px"/>
                <TextView
                    android:id="@+id/tv_priseNum"
                    android:textColor="@color/material_blue_grey_90"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textSize="25px"/>
            </LinearLayout>
            <View style="@style/vertical_cutting_line" />
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/material_blue_grey_90"
                    android:text="收藏量："
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textSize="25px"/>
                <TextView
                    android:id="@+id/tv_collectNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/material_blue_grey_90"
                    android:text="50"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textSize="25px"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10px"/>
        <View style="@style/cutting_line" />

    </LinearLayout>

</LinearLayout>
