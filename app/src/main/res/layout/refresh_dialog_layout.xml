<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/refresh_dialog_corner_bg"
    android:paddingBottom="@dimen/dialog_padding_top"
    android:paddingEnd="@dimen/dialog_padding_left"
    android:paddingLeft="@dimen/dialog_padding_left"
    android:paddingRight="@dimen/dialog_padding_left"
    android:paddingStart="@dimen/dialog_padding_left"
    android:paddingTop="@dimen/dialog_padding_top"
    android:orientation="vertical">

    <android.support.v4.widget.ContentLoadingProgressBar
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:visibility="gone" />

</LinearLayout>