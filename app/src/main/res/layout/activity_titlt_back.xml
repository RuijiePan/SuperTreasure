<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/text_color_title" >

        <LinearLayout
            android:id="@+id/ll_title_left"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/text90">
            <Button
                android:id="@+id/bt_title_left"
                android:layout_gravity="center"
                android:layout_width="@dimen/text30"
                android:layout_height="@dimen/text30"
                android:layout_marginRight="@dimen/text60"
                android:background="@drawable/navigationbar_back"
                android:gravity="center"
                android:layout_marginLeft="@dimen/text15"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/text30"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </LinearLayout>

        <TextView
            android:layout_gravity="center"
            android:id="@+id/tv_title_name"
            android:layout_weight="1"
            android:layout_width="@dimen/text45"
            android:layout_height="@dimen/text45"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@+id/bt_title_right"
            android:layout_toRightOf="@+id/bt_title_left"
            android:gravity="center"
            android:lines="1"
            android:ellipsize="end"
            android:text="Title"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text35" />

        <LinearLayout
            android:id="@+id/ll_title_right"
            android:layout_width="@dimen/text105"
            android:layout_height="@dimen/text90">
            <FrameLayout
                android:layout_gravity="center"
                android:background="@null"
                android:layout_width="@dimen/text105"
                android:layout_height="@dimen/text60">
                <Button

                    android:layout_gravity="center"
                    android:id="@+id/bt_title_right"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/text15"
                    android:text="发布"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:textColor="@color/text_color_white"
                    android:background="@null"
                    android:textSize="@dimen/text35"
                    />
                <Button
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:id="@+id/bt_title_right_history"
                    android:layout_width="@dimen/text45"
                    android:layout_height="@dimen/text45"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:textColor="@color/text_color_white"
                    android:background="@drawable/ic_history"
                    android:textSize="@dimen/text35"
                    />
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>