<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_backgroud"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.supertreasure.main.ActivityMine"
    android:orientation="vertical"
    android:id="@+id/root"
    >
    <include layout="@layout/activity_titlt_back"/>
    <LinearLayout
        android:background="@color/gray_btn_bg_color"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:textSize="40px"
            android:textStyle="bold"
            android:textColor="@color/red_btn_bg_pressed_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前已有元宝币："/>
        <TextView
            android:textSize="40px"
            android:textStyle="bold"
            android:textColor="@color/red_btn_bg_pressed_color"
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"/>
    </LinearLayout>
    <TextView
        android:textSize="35px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/tv_money_detial"/>

    <EditText
        android:id="@+id/et_money"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
