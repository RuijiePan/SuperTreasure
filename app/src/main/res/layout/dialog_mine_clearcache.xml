<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.supertreasure.main.ActivityMine"
    android:orientation="vertical"
    android:id="@+id/root"
    >
        <LinearLayout
            android:layout_marginRight="40px"
            android:layout_marginLeft="40px"
            android:background="@color/grey_backgroud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:background="@drawable/buttonselector"
                android:id="@+id/btn_mine_boy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:gravity="center_horizontal"
                    android:id="@+id/tv_mystore"
                    android:layout_marginTop="@dimen/maginTop_Mine"
                    android:textSize="@dimen/mine_dialog_contenttextsize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tx_activity_ifto_clearCache"/>
                <View
                    android:layout_below="@+id/tv_mystore"
                    android:layout_marginTop="@dimen/maginTop_Mine_line"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorgray"/>
            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/buttonselector"
                android:id="@+id/btn_mine_gril"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/tv_tips1"
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:background="@drawable/buttonselector"
                        android:id="@+id/btn_cancel"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="match_parent">

                        <TextView
                            android:gravity="center"
                            android:id="@+id/tv_cancel"
                            android:layout_marginTop="@dimen/maginTop_Mine"
                            android:textSize="@dimen/mine_dialog_keytextsize"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/tx_activity_cancel"/>
                        <View
                            android:layout_below="@+id/tv_cancel"
                            android:layout_marginTop="@dimen/maginTop_Mine_line"
                            android:layout_width="match_parent"
                            android:layout_height="1px"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:background="@drawable/buttonselector"
                        android:id="@+id/btn_confirm"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:layout_height="match_parent">
                        <TextView
                            android:gravity="center"
                            android:id="@+id/tv_confirm"
                            android:layout_marginTop="@dimen/maginTop_Mine"
                            android:textSize="@dimen/mine_dialog_keytextsize"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/tx_activity_confirm"/>
                        <View
                            android:layout_below="@+id/tv_confirm"
                            android:layout_marginTop="@dimen/maginTop_Mine_line"
                            android:layout_width="match_parent"
                            android:layout_height="1px"/>
                    </RelativeLayout>

                </LinearLayout>

                </RelativeLayout>
        </LinearLayout>

</LinearLayout>
