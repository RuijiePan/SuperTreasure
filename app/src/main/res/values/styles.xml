<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/text_color_title</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/text_color_title</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="colorPrimary">@color/text_color_title</item>
        <item name="colorPrimaryDark">@color/text_color_title</item>
    </style>

    <style name="AppTheme.NoActionBarSwiperBack" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/text_color_title</item>
        <item name="colorPrimaryDark">@color/text_color_title</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
    <item name="android:windowBackground">@drawable/ic_splash</item>
</style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <!-- 分割线 -->
    <style name="cutting_line">
        <item name="android:background">@color/text_grey_line</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2px</item>
    </style>
    <style name="vertical_cutting_bar">
        <item name="android:background">@drawable/verticalbar</item>
        <item name="android:layout_width">20px</item>
        <item name="android:layout_height">@dimen/text45</item>
    </style>
    <style name="vertical_cutting_line">
        <item name="android:background">@color/address_list_divider</item>
        <item name="android:layout_width">2px</item>
        <item name="android:layout_height">@dimen/text30</item>
    </style>

    <style name="cutting_grey_line_50px">
        <item name="android:background">@color/text_grey_line</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50px</item>
    </style>

    <style name="cutting_line1">
        <item name="android:background">@color/grey_backgroud</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5px</item>
    </style>

    <style name="cutting_grey_line_left_40px">
        <item name="android:background">@color/text_grey_line</item>
        <item name="android:layout_marginLeft">40px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="cutting_grey_line_left_right_30px">
        <item name="android:background">@color/text_grey_line</item>
        <item name="android:layout_marginLeft">30px</item>
        <item name="android:layout_marginRight">30px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="transparentFrameWindowStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/bg_popwindow_comment</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="dialog_fade" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/dialog_fade_anim</item>
    </style>

    <style name="dialog_fade_anim" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="photoChooseDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/photo_choose_bg</item>
    </style>

    <!--分类的动画style-->
    <style name="categoryAnim" parent="@android:style/Animation">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="main_menu_animstyle">
        <item name="android:windowEnterAnimation">@anim/photo_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/photo_dialog_out_anim</item>
    </style>

    <style name="mood_comment_dialog_animstyle">
        <item name="android:windowEnterAnimation">@anim/mood_comment_in_anim</item>
        <item name="android:windowExitAnimation">@anim/mood_comment_out_anim</item>
    </style>

    <style name="address_choose_animstyle">
        <item name="android:windowEnterAnimation">@anim/address_popwindow_in</item>
        <item name="android:windowExitAnimation">@anim/address_popwindow_out</item>

    </style>
       <style name="picUploadDialogStyle" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 对话框是否有遮盖 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--选择图片对话-->
    <style name="ChoiceGoodPicDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="progressbar_circle">
        <item name="android:indeterminateDrawable">@drawable/progressbar_circle</item>
        <item name="android:minWidth">25dp</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:maxWidth">60dp</item>
        <item name="android:maxHeight">60dp</item>
    </style>

    <style name="RunningDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="RuningProgressDialog" parent="@style/RunningDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--
        max                 最大进度
        progress            初始时的进度
        startAngle             进度从圆环的哪个角度开始走
        centreColor         圆环内部的填充色
        ringColor             圆环的颜色
        ringProgressColor   圆环进度的颜色
        ringWidth             圆环宽度
        textColor             中心文字的颜色
        textSize             中心文字的大小
        textIsDisplayable     中心文字是否显示
        style = 0/1          进度的风格，实心或者空心
     -->
    <declare-styleable name="RoundProgressBar">
        <attr name="max" format="integer"/>
        <attr name="progress" format="integer"/>
        <attr name="startAngle" format="integer"/>
        <attr name="ringColor" format="color"/>
        <attr name="ringProgressColor" format="color"/>
        <attr name="ringWidth" format="dimension"/>
        <attr name="centerColor" format="color"/>
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textIsDisplayable" format="boolean"/>
        <attr name="style">
            <enum name="STROKE" value="0"/>
            <enum name="FILL"   value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="CustomToolBar">
        <!--左侧文字-->
        <attr name="leftText" format="string" />
        <!--中间文字-->
        <attr name="centerText" format="string" />
        <!--右侧文字-->
        <attr name="rightText" format="string" />
        <!--左侧图标-->
        <attr name="leftIcon" format="reference" />
        <!--右侧图标-->
        <attr name="rightIcon" format="reference" />
        <!--右侧第一个图标-->
        <attr name="leftrightIcon" format="reference" />
    </declare-styleable>

    <style name="transparentText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor" >#00000000</item>
    </style>

    <style name="ToolBarTitleText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">20sp</item>
        <!--<item name="android:textStyle">bold</item>-->
    </style>
</resources>
